@inject IJSRuntime JsRuntime

<div class="theme-toggle @Class">
    <label class="form-label mb-0" for="themeSelect">Theme</label>
    <select id="themeSelect" class="form-select form-select-sm" @bind="selectedPreference" @bind:after="OnPreferenceChanged">
        <option value="system">System</option>
        <option value="light">Light</option>
        <option value="dark">Dark</option>
    </select>
</div>

@code {
    [Parameter]
    public string? Class { get; set; }

    private string selectedPreference = "system";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender)
        {
            return;
        }

        selectedPreference = await JsRuntime.InvokeAsync<string>("neutralTheme.getPreference");
        StateHasChanged();
    }

    private async Task OnPreferenceChanged()
    {
        selectedPreference = await JsRuntime.InvokeAsync<string>("neutralTheme.setPreference", selectedPreference);
    }
}
