                                {
                                    <div class="mb-3">
                                        <div class="text-muted small">Suspended at</div>
                                        <div>@selectedUser.SuspendedAt?.ToLocalTime().ToString("MMM d, yyyy h:mm tt")</div>
                                    </div>
                                }

