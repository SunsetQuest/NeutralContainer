    private async Task SuspendUserAsync(string userId)
    {
        actionMessage = null;

        try
        {
            var authState = await AuthenticationStateTask;
            var actor = await UserManager.GetUserAsync(authState.User);
            if (actor is null)
            {
                actionMessage = "Unable to identify the current admin user.";
                actionMessageStyle = "alert-danger";
                return;
            }

            if (actor.Id == userId)
            {
                actionMessage = "You cannot suspend your own account.";
                actionMessageStyle = "alert-warning";
                return;
            }

            var user = await DbContext.Users.FirstOrDefaultAsync(current => current.Id == userId);
            if (user is null)
            {
                actionMessage = "That user could not be found.";
                actionMessageStyle = "alert-warning";
                return;
            }

            user.IsSuspended = true;
            user.SuspendedAt = DateTimeOffset.UtcNow;
            user.SuspendedUntil = null;
            user.SuspensionReason = string.IsNullOrWhiteSpace(suspensionReason) ? null : suspensionReason.Trim();
            await DbContext.SaveChangesAsync();
            await LogModerationActionAsync("User", user.Id, "Suspend", user.SuspensionReason);

            actionMessage = "User suspended.";
            actionMessageStyle = "alert-success";
            await LoadQueueAsync();
        }
        catch (Exception ex)
        {
            loadError = $"Unable to suspend the user. {ex.Message}";
