                                    <label class="form-label" for="suspensionReason">Suspension reason</label>
                                    <InputTextArea id="suspensionReason"
                                                   class="form-control"
                                                   rows="3"
                                                   @bind-Value="suspensionReason" />
                                </div>

                                <div class="d-flex flex-wrap gap-2">
                                    @if (selectedUser.IsSuspended)
                                    {
                                        <button class="btn btn-outline-success"
                                                type="button"
                                                @onclick="(() => UnsuspendUserAsync(selectedUser.Id))">
                                            Unsuspend
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-danger"
                                                type="button"
                                                @onclick="(() => SuspendUserAsync(selectedUser.Id))">
                                            Suspend
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
</div>

@code {
    private readonly List<ReportListItem> reports = new();
    private readonly List<HeldCommentItem> heldComments = new();
    private readonly List<HeldCommentItem> flaggedComments = new();
    private readonly List<UserListItem> users = new();
    private bool isLoading = true;
    private string? loadError;
    private string? actionMessage;
    private string actionMessageStyle = "alert-info";
    private string? heldRejectionReason;
    private string? flaggedRejectionReason;
    private QueueTab selectedTab = QueueTab.Held;
    private HeldCommentItem? selectedHeldComment;
    private HeldCommentItem? selectedFlaggedComment;
    private ReportListItem? selectedReport;
    private UserListItem? selectedUser;
    private string? suspensionReason;

    private static readonly string[] RejectionReasons =
    [
        "Harassment, disrespect, or hostile tone",
        "Unsolicited advice outside the Response Agreement",
        "Diagnostic or labeling language",
        "Moralizing, shaming, or judgmental framing",
        "Minimizing or dismissive language",
        "Spam or promotional content",
        "Off-topic or unrelated to the post"
    ];

    [CascadingParameter]
    private Task<AuthenticationState> AuthenticationStateTask { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        await LoadQueueAsync();
    }

    private async Task LoadQueueAsync()
    {
        isLoading = true;
        loadError = null;
        actionMessage = null;
        reports.Clear();
        heldComments.Clear();
        flaggedComments.Clear();
        users.Clear();
        selectedHeldComment = null;
        selectedFlaggedComment = null;
        selectedReport = null;
        selectedUser = null;
        heldRejectionReason = null;
        flaggedRejectionReason = null;
        suspensionReason = null;

        try
        {
            await LoadReportsAsync();
            await LoadHeldCommentsAsync();
            await LoadFlaggedCommentsAsync();
            await LoadUsersAsync();
        }
        catch (Exception ex)
        {
            loadError = $"Unable to load the admin queue. {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadReportsAsync()
    {
        var reportEntities = await DbContext.CommentReports
            .AsNoTracking()
            .Include(report => report.Comment)
            .ThenInclude(comment => comment!.Post)
            .Include(report => report.Comment)
            .ThenInclude(comment => comment!.CommenterUser)
            .Include(report => report.ReporterUser)
            .Where(report => report.Status == ReportStatus.Open)
            .OrderByDescending(report => report.CreatedAt)
            .ToListAsync();

        var creatorIds = reportEntities
            .Select(report => report.Comment?.Post?.CreatorUserId)
            .Where(id => !string.IsNullOrWhiteSpace(id))
            .Distinct()
            .ToList();

        var creators = await DbContext.Users
            .AsNoTracking()
            .Where(user => creatorIds.Contains(user.Id))
            .ToDictionaryAsync(user => user.Id, ResolveDisplayName);

        foreach (var report in reportEntities)
        {
            var comment = report.Comment;
            var post = comment?.Post;
            reports.Add(new ReportListItem(
                report.Id,
                string.IsNullOrWhiteSpace(post?.Title) ? "Untitled" : post!.Title!,
                BuildPreview(comment?.Body ?? string.Empty),
                ResolveDisplayName(report.ReporterUser),
                ResolveDisplayName(comment?.CommenterUser),
                ResolveCreatorName(post, creators),
                comment?.Body ?? string.Empty,
                comment?.Visibility.ToString() ?? "Unknown",
                comment?.CreatedAt ?? DateTimeOffset.MinValue,
                ResolveContextText(post),
                string.IsNullOrWhiteSpace(report.Reason) ? "No reason provided." : report.Reason,
