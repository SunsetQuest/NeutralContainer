                    <h2 class="h5">User detail</h2>
                    @if (selectedUser is null)
                    {
                        <p class="text-muted">Select a user to manage suspension status.</p>
                    }
                    else
                    {
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-wrap justify-content-between align-items-start gap-2 mb-3">
                                    <div>
                                        <h3 class="h6 mb-1">@selectedUser.DisplayName</h3>
                                        <div class="text-muted small">@selectedUser.Email</div>
                                    </div>
                                    <span class="badge @(selectedUser.IsSuspended ? "text-bg-danger" : "text-bg-success")">
                                        @(selectedUser.IsSuspended ? "Suspended" : "Active")
                                    </span>
                                </div>

                                <div class="mb-3">
                                    <div class="text-muted small">Joined</div>
                                    <div>@selectedUser.CreatedAt.ToLocalTime().ToString("MMM d, yyyy h:mm tt")</div>
                                </div>

