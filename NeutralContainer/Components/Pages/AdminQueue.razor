@page "/admin/queue"
@using System.Text.Json
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using NeutralContainer.Data
@using NeutralContainer.Utilities
@inject ApplicationDbContext DbContext
@inject UserManager<ApplicationUser> UserManager

@attribute [Authorize(Roles = RoleNames.Admin + "," + RoleNames.Moderator)]

<PageTitle>Admin Queue</PageTitle>

<div class="container py-4">
    <h1>Admin Queue</h1>

    @if (isLoading)
    {
        <p class="text-muted">Loading queue…</p>
    }
    else if (!string.IsNullOrWhiteSpace(loadError))
    {
        <div class="alert alert-danger">@loadError</div>
    }
    else
    {
        <ul class="nav nav-tabs mb-3">
            <li class="nav-item">
                <button class="nav-link @(selectedTab == QueueTab.Held ? "active" : "")"
                        type="button"
                        @onclick="(() => SelectTab(QueueTab.Held))">
                    Held comments <span class="badge text-bg-secondary ms-1">@heldComments.Count</span>
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link @(selectedTab == QueueTab.Flagged ? "active" : "")"
                        type="button"
                        @onclick="(() => SelectTab(QueueTab.Flagged))">
                    Flagged comments <span class="badge text-bg-secondary ms-1">@flaggedComments.Count</span>
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link @(selectedTab == QueueTab.Reports ? "active" : "")"
                        type="button"
                        @onclick="(() => SelectTab(QueueTab.Reports))">
                    Reports <span class="badge text-bg-secondary ms-1">@reports.Count</span>
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link @(selectedTab == QueueTab.Users ? "active" : "")"
                        type="button"
                        @onclick="(() => SelectTab(QueueTab.Users))">
                    Users <span class="badge text-bg-secondary ms-1">@users.Count</span>
                </button>
            </li>
        </ul>

        @if (!string.IsNullOrWhiteSpace(actionMessage))
        {
            <div class="alert @actionMessageStyle">@actionMessage</div>
        }

        @if (selectedTab == QueueTab.Held)
        {
            <div class="row g-3">
                <div class="col-12 col-lg-5">
                    <h2 class="h5">Held comments</h2>
                    @if (heldComments.Count == 0)
                    {
                        <p class="text-muted">No held comments right now.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table align-middle">
                                <thead>
                                    <tr>
                                        <th scope="col">Post</th>
                                        <th scope="col">Commenter</th>
                                        <th scope="col">Submitted</th>
                                        <th scope="col">Preview</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var comment in heldComments)
                                    {
                                        <tr class="@(selectedHeldComment?.Id == comment.Id ? "table-active" : "")">
                                            <td>@comment.PostTitle</td>
                                            <td>@comment.CommenterName</td>
                                            <td>@comment.CreatedAt.ToLocalTime().ToString("MMM d, yyyy")</td>
                                            <td>@comment.Preview</td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-primary"
                                                        type="button"
                                                        @onclick="(() => SelectHeldComment(comment.Id))">
                                                    Review
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                <div class="col-12 col-lg-7">
                    <h2 class="h5">Comment detail</h2>
                    @if (selectedHeldComment is null)
                    {
                        <p class="text-muted">Select a held comment to review the details.</p>
                    }
                    else
                    {
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-wrap justify-content-between align-items-start gap-2 mb-3">
                                    <div>
                                        <h3 class="h6 mb-1">@selectedHeldComment.PostTitle</h3>
                                        <div class="text-muted small">
                                            Creator: @selectedHeldComment.CreatorName · Commenter: @selectedHeldComment.CommenterName
                                        </div>
                                    </div>
                                    <span class="badge text-bg-warning">Held</span>
                                </div>

                                <div class="mb-3">
                                    <h4 class="h6">Comment</h4>
                                    <p class="mb-1">@selectedHeldComment.Body</p>
                                    <div class="text-muted small">
                                        Visibility: @selectedHeldComment.VisibilityLabel · Submitted @selectedHeldComment.CreatedAt.ToLocalTime().ToString("MMM d, yyyy h:mm tt")
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <h4 class="h6">Post context</h4>
                                    <p class="mb-1 text-muted">@selectedHeldComment.ContextText</p>
                                </div>

                                <div class="mb-3">
                                    <h4 class="h6">Response Agreement</h4>
                                    <div class="row g-2">
                                        <div class="col-12 col-md-6">
                                            <div class="border rounded p-2 h-100">
                                                <div class="small text-muted">Looking for</div>
                                                <ul class="mb-0">
                                                    @foreach (var item in selectedHeldComment.AllowedFeedback)
                                                    {
                                                        <li>@item</li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="border rounded p-2 h-100">
                                                <div class="small text-muted">Please avoid</div>
                                                <ul class="mb-0">
                                                    @foreach (var item in selectedHeldComment.AvoidanceModes)
                                                    {
                                                        <li>@item</li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mt-2">
                                        <span class="badge text-bg-light border">Moderation: @selectedHeldComment.ModerationLevel</span>
                                        @foreach (var flag in selectedHeldComment.SensitivityFlags)
                                        {
                                            <span class="badge text-bg-light border ms-1">@flag</span>
                                        }
                                    </div>
                                    @if (!string.IsNullOrWhiteSpace(selectedHeldComment.CustomRulesText))
                                    {
                                        <div class="mt-2">
                                            <div class="small text-muted">Custom rules</div>
                                            <p class="mb-0">@selectedHeldComment.CustomRulesText</p>
                                        </div>
                                    }
                                </div>

                                <div class="mb-3">
                                    <h4 class="h6">Triggered reasons</h4>
                                    @if (selectedHeldComment.Reasons.Count == 0)
                                    {
                                        <p class="text-muted mb-0">No moderation reasons were stored for this comment.</p>
                                    }
                                    else
                                    {
                                        <ul class="mb-0">
                                            @foreach (var reason in selectedHeldComment.Reasons)
                                            {
                                                <li>@reason.Summary (@reason.TriggeredRule, @reason.Severity)</li>
                                            }
                                        </ul>
                                    }
                                </div>

                                <div class="mb-3">
                                    <h4 class="h6">Rejection reason</h4>
                                    <select class="form-select" @bind="heldRejectionReason">
                                        <option value="">Select a reason (required to reject)</option>
                                        @foreach (var reason in RejectionReasons)
                                        {
                                            <option value="@reason">@reason</option>
                                        }
                                    </select>
                                    <div class="form-text">Choose a neutral reason template to keep feedback grounded.</div>
                                </div>

                                <div class="d-flex flex-wrap gap-2">
                                    <button class="btn btn-success"
                                            type="button"
                                            @onclick="(() => ResolveHeldCommentAsync(selectedHeldComment.Id, true))">
                                        Approve
                                    </button>
                                    <button class="btn btn-outline-danger"
                                            type="button"
                                            @onclick="(() => ResolveHeldCommentAsync(selectedHeldComment.Id, false))">
                                        Reject
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else if (selectedTab == QueueTab.Flagged)
        {
            <div class="row g-3">
                <div class="col-12 col-lg-5">
                    <h2 class="h5">Flagged comments</h2>
                    @if (flaggedComments.Count == 0)
                    {
                        <p class="text-muted">No flagged comments right now.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table align-middle">
                                <thead>
                                    <tr>
                                        <th scope="col">Post</th>
                                        <th scope="col">Commenter</th>
                                        <th scope="col">Submitted</th>
                                        <th scope="col">Preview</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var comment in flaggedComments)
                                    {
                                        <tr class="@(selectedFlaggedComment?.Id == comment.Id ? "table-active" : "")">
                                            <td>@comment.PostTitle</td>
                                            <td>@comment.CommenterName</td>
                                            <td>@comment.CreatedAt.ToLocalTime().ToString("MMM d, yyyy")</td>
                                            <td>@comment.Preview</td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-primary"
                                                        type="button"
                                                        @onclick="(() => SelectFlaggedComment(comment.Id))">
                                                    Review
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                <div class="col-12 col-lg-7">
                    <h2 class="h5">Comment detail</h2>
                    @if (selectedFlaggedComment is null)
                    {
                        <p class="text-muted">Select a flagged comment to review the details.</p>
                    }
                    else
                    {
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-wrap justify-content-between align-items-start gap-2 mb-3">
                                    <div>
                                        <h3 class="h6 mb-1">@selectedFlaggedComment.PostTitle</h3>
                                        <div class="text-muted small">
                                            Creator: @selectedFlaggedComment.CreatorName · Commenter: @selectedFlaggedComment.CommenterName
                                        </div>
                                    </div>
                                    <span class="badge text-bg-danger">Flagged</span>
                                </div>

                                <div class="mb-3">
                                    <h4 class="h6">Comment</h4>
                                    <p class="mb-1">@selectedFlaggedComment.Body</p>
                                    <div class="text-muted small">
                                        Visibility: @selectedFlaggedComment.VisibilityLabel · Submitted @selectedFlaggedComment.CreatedAt.ToLocalTime().ToString("MMM d, yyyy h:mm tt")
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <h4 class="h6">Post context</h4>
                                    <p class="mb-1 text-muted">@selectedFlaggedComment.ContextText</p>
                                </div>

                                <div class="mb-3">
                                    <h4 class="h6">Response Agreement</h4>
                                    <div class="row g-2">
                                        <div class="col-12 col-md-6">
                                            <div class="border rounded p-2 h-100">
                                                <div class="small text-muted">Looking for</div>
                                                <ul class="mb-0">
                                                    @foreach (var item in selectedFlaggedComment.AllowedFeedback)
                                                    {
                                                        <li>@item</li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="border rounded p-2 h-100">
                                                <div class="small text-muted">Please avoid</div>
                                                <ul class="mb-0">
                                                    @foreach (var item in selectedFlaggedComment.AvoidanceModes)
                                                    {
                                                        <li>@item</li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mt-2">
                                        <span class="badge text-bg-light border">Moderation: @selectedFlaggedComment.ModerationLevel</span>
                                        @foreach (var flag in selectedFlaggedComment.SensitivityFlags)
                                        {
                                            <span class="badge text-bg-light border ms-1">@flag</span>
                                        }
                                    </div>
                                    @if (!string.IsNullOrWhiteSpace(selectedFlaggedComment.CustomRulesText))
                                    {
                                        <div class="mt-2">
                                            <div class="small text-muted">Custom rules</div>
                                            <p class="mb-0">@selectedFlaggedComment.CustomRulesText</p>
                                        </div>
                                    }
                                </div>

                                <div class="mb-3">
                                    <h4 class="h6">Triggered reasons</h4>
                                    @if (selectedFlaggedComment.Reasons.Count == 0)
                                    {
                                        <p class="text-muted mb-0">No moderation reasons were stored for this comment.</p>
                                    }
                                    else
                                    {
                                        <ul class="mb-0">
                                            @foreach (var reason in selectedFlaggedComment.Reasons)
                                            {
                                                <li>@reason.Summary (@reason.TriggeredRule, @reason.Severity)</li>
                                            }
                                        </ul>
                                    }
                                </div>

                                <div class="mb-3">
                                    <h4 class="h6">Rejection reason</h4>
                                    <select class="form-select" @bind="flaggedRejectionReason">
                                        <option value="">Select a reason (required to reject)</option>
                                        @foreach (var reason in RejectionReasons)
                                        {
                                            <option value="@reason">@reason</option>
                                        }
                                    </select>
                                    <div class="form-text">Choose a neutral reason template to keep feedback grounded.</div>
                                </div>

                                <div class="d-flex flex-wrap gap-2">
                                    <button class="btn btn-success"
                                            type="button"
                                            @onclick="(() => ResolveFlaggedCommentAsync(selectedFlaggedComment.Id, true))">
                                        Approve
                                    </button>
                                    <button class="btn btn-outline-danger"
                                            type="button"
                                            @onclick="(() => ResolveFlaggedCommentAsync(selectedFlaggedComment.Id, false))">
                                        Reject
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else if (selectedTab == QueueTab.Reports)
        {
            <div class="row g-3">
                <div class="col-12 col-lg-5">
                    <h2 class="h5">Open reports</h2>

                    @if (reports.Count == 0)
                    {
                        <p class="text-muted">No open reports right now.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table align-middle">
                                <thead>
                                    <tr>
                                        <th scope="col">Post</th>
                                        <th scope="col">Comment</th>
                                        <th scope="col">Reporter</th>
                                        <th scope="col">Created</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var report in reports)
                                    {
                                        <tr class="@(selectedReport?.Id == report.Id ? "table-active" : "")">
                                            <td>@report.PostTitle</td>
                                            <td>@report.CommentPreview</td>
                                            <td>@report.ReporterName</td>
                                            <td>@report.CreatedAt.ToLocalTime().ToString("MMM d, yyyy")</td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-primary"
                                                        type="button"
                                                        @onclick="(() => SelectReport(report.Id))">
                                                    Review
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                <div class="col-12 col-lg-7">
                    <h2 class="h5">Report detail</h2>
                    @if (selectedReport is null)
                    {
                        <p class="text-muted">Select a report to review the details.</p>
                    }
                    else
                    {
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-wrap justify-content-between align-items-start gap-2 mb-3">
                                    <div>
                                        <h3 class="h6 mb-1">@selectedReport.PostTitle</h3>
                                        <div class="text-muted small">
                                            Creator: @selectedReport.CreatorName · Commenter: @selectedReport.CommenterName
                                        </div>
                                    </div>
                                    <span class="badge text-bg-secondary">Open report</span>
                                </div>

                                <div class="mb-3">
                                    <h4 class="h6">Comment</h4>
                                    <p class="mb-1">@selectedReport.CommentBody</p>
                                    <div class="text-muted small">
                                        Visibility: @selectedReport.VisibilityLabel · Submitted @selectedReport.CommentCreatedAt.ToLocalTime().ToString("MMM d, yyyy h:mm tt")
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <h4 class="h6">Report</h4>
                                    <div class="text-muted small mb-1">
                                        Reporter: @selectedReport.ReporterName · Created @selectedReport.CreatedAt.ToLocalTime().ToString("MMM d, yyyy h:mm tt")
                                    </div>
                                    <p class="mb-0">@selectedReport.ReasonLabel</p>
                                </div>

                                <div class="mb-3">
                                    <h4 class="h6">Post context</h4>
                                    <p class="mb-1 text-muted">@selectedReport.ContextText</p>
                                </div>

                                <div class="d-flex flex-wrap gap-2">
                                    <button class="btn btn-outline-success"
                                            type="button"
                                            @onclick="(() => ResolveReportAsync(selectedReport.Id))">
                                        Resolve report
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else if (selectedTab == QueueTab.Users)
        {
            <div class="row g-3">
                <div class="col-12 col-lg-5">
                    <h2 class="h5">Users</h2>

                    @if (users.Count == 0)
                    {
                        <p class="text-muted">No users found.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table align-middle">
                                <thead>
                                    <tr>
                                        <th scope="col">User</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Joined</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in users)
                                    {
                                        <tr class="@(selectedUser?.Id == user.Id ? "table-active" : "")">
                                            <td>@user.DisplayName</td>
                                            <td>@user.Email</td>
                                            <td>@user.CreatedAt.ToLocalTime().ToString("MMM d, yyyy")</td>
                                            <td>
                                                <span class="badge @(user.IsSuspended ? "text-bg-danger" : "text-bg-success")">
                                                    @(user.IsSuspended ? "Suspended" : "Active")
                                                </span>
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-primary"
                                                        type="button"
                                                        @onclick="(() => SelectUser(user.Id))">
