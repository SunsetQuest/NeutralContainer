@page "/creator/inbox"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using NeutralContainer.Data
@inject ApplicationDbContext DbContext
@inject UserManager<ApplicationUser> UserManager

@attribute [Authorize(Roles = RoleNames.Creator)]

<PageTitle>Creator Inbox</PageTitle>

<div class="container py-4">
    <h1>Creator Inbox</h1>

    @if (isLoading)
    {
        <p class="text-muted">Loading inbox…</p>
    }
    else if (!string.IsNullOrWhiteSpace(loadError))
    {
        <div class="alert alert-danger">@loadError</div>
    }
    else
    {
        <div class="row g-3 align-items-end mb-4">
            <div class="col-12 col-md-6">
                <label class="form-label" for="postFilter">Filter by post</label>
                <select id="postFilter" class="form-select" @onchange="HandlePostFilterChanged">
                    <option value="">All posts</option>
                    @foreach (var post in posts)
                    {
                        <option value="@post.Id" selected="@(post.Id == selectedPostId)">@post.Title</option>
                    }
                </select>
            </div>
            <div class="col-12 col-md-6 text-md-end">
                <span class="text-muted">@totalFilteredCount comment(s)</span>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(actionMessage))
        {
            <div class="alert @actionMessageStyle">@actionMessage</div>
        }

        <ul class="nav nav-tabs mb-3">
            @foreach (var status in statusTabs)
            {
                <li class="nav-item">
                    <button class="nav-link @(selectedStatus == status.Status ? "active" : "")"
                            type="button"
                            @onclick="(() => SelectStatus(status.Status))">
                        @status.Label <span class="badge text-bg-secondary ms-1">@statusCounts.GetValueOrDefault(status.Status)</span>
                    </button>
                </li>
            }
        </ul>

        @if (filteredComments.Count == 0)
        {
            <p class="text-muted">No comments in this view yet.</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th scope="col">Post</th>
                            <th scope="col">Commenter</th>
                            <th scope="col">Visibility</th>
                            <th scope="col">Status</th>
                            <th scope="col">Submitted</th>
                            <th scope="col">Preview</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var comment in filteredComments)
                        {
                            <tr>
                                <td>@comment.PostTitle</td>
                                <td>@comment.CommenterName</td>
                                <td>@comment.Visibility</td>
                                <td>
                                    <div class="d-flex flex-wrap gap-2">
                                        <span class="badge @GetStatusBadgeClass(comment)">@GetStatusLabel(comment)</span>
                                        @if (comment.IsHighlighted)
                                        {
                                            <span class="badge text-bg-warning">Highlighted</span>
                                        }
                                    </div>
                                </td>
                                <td>@comment.CreatedAt.ToLocalTime().ToString("MMM d, yyyy")</td>
                                <td>@comment.Preview</td>
                                <td>
                                    <div class="d-flex flex-wrap gap-2">
                                        <div class="btn-group btn-group-sm" role="group">
                                        @if (comment.Status == CommentModerationStatus.Held)
                                        {
                                            <button class="btn btn-outline-success"
                                                    type="button"
                                                    @onclick="(() => ApproveCommentAsync(comment.Id))">
                                                Approve
                                            </button>
                                        }
                                        @if (comment.Status == CommentModerationStatus.Approved)
                                        {
                                            if (comment.IsHidden)
                                            {
                                                <button class="btn btn-outline-secondary"
                                                        type="button"
                                                        @onclick="(() => ToggleHideCommentAsync(comment.Id, false))">
                                                    Unhide
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-outline-secondary"
                                                        type="button"
                                                        @onclick="(() => ToggleHideCommentAsync(comment.Id, true))">
                                                    Hide
                                                </button>
                                            }
                                        }
                                        </div>
                                        <div class="btn-group btn-group-sm" role="group">
                                            @if (comment.Status == CommentModerationStatus.Approved
                                                 && comment.Visibility == CommentVisibility.Public
                                                 && !comment.IsHidden)
                                            {
                                                <button class="btn btn-outline-primary"
                                                        type="button"
                                                        @onclick="(() => ToggleHighlightCommentAsync(comment.Id, !comment.IsHighlighted))">
                                                    @(comment.IsHighlighted ? "Unhighlight" : "Highlight")
                                                </button>
                                            }
                                            <button class="btn btn-outline-danger"
                                                    type="button"
                                                    disabled="@comment.IsCommenterBlocked"
                                                    @onclick="(() => BlockCommenterAsync(comment.Id))">
                                                @(comment.IsCommenterBlocked ? "Blocked" : "Block user")
                                            </button>
                                            <button class="btn btn-outline-warning"
                                                    type="button"
                                                    @onclick="(() => StartReport(comment.Id))">
                                                Report
                                            </button>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        @if (reportCommentId.HasValue)
        {
            <div class="card mt-4">
                <div class="card-body">
                    <h2 class="h5">Report comment</h2>
                    <p class="text-muted">This report will be sent to the admin queue.</p>
                    <div class="mb-3">
                        <label class="form-label" for="reportReason">Reason (optional)</label>
                        <InputTextArea id="reportReason"
                                       class="form-control"
                                       rows="3"
                                       @bind-Value="reportReason" />
                    </div>
                    <div class="d-flex flex-wrap gap-2">
                        <button class="btn btn-warning" type="button" @onclick="SubmitReportAsync">Submit report</button>
                        <button class="btn btn-outline-secondary" type="button" @onclick="CancelReport">Cancel</button>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    private static readonly IReadOnlyList<StatusTab> statusTabs = new List<StatusTab>
    {
        new(CommentModerationStatus.Approved, "Approved"),
        new(CommentModerationStatus.Held, "Held"),
        new(CommentModerationStatus.Rejected, "Rejected"),
        new(CommentModerationStatus.Flagged, "Flagged")
    };

    private readonly List<PostOption> posts = new();
    private readonly List<CommentInboxItem> allComments = new();
    private readonly Dictionary<CommentModerationStatus, int> statusCounts = new();
    private List<CommentInboxItem> filteredComments = new();
    private CommentModerationStatus selectedStatus = CommentModerationStatus.Approved;
    private int? selectedPostId;
    private int totalFilteredCount;
    private bool isLoading = true;
    private string? loadError;
    private string? actionMessage;
    private string actionMessageStyle = "alert-info";
    private int? reportCommentId;
    private string? reportReason;

    [CascadingParameter]
    private Task<AuthenticationState> AuthenticationStateTask { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        await LoadInboxAsync();
    }

    private async Task LoadInboxAsync()
    {
        isLoading = true;
        loadError = null;
        allComments.Clear();
        posts.Clear();
        statusCounts.Clear();

        try
        {
            var authState = await AuthenticationStateTask;
            var user = await UserManager.GetUserAsync(authState.User);
            if (user is null)
            {
                loadError = "Unable to identify the current user. Please sign in again.";
                return;
            }

            var creatorPosts = await DbContext.Posts
                .AsNoTracking()
                .Where(post => post.CreatorUserId == user.Id)
                .OrderByDescending(post => post.CreatedAt)
                .Select(post => new PostOption(
                    post.Id,
                    string.IsNullOrWhiteSpace(post.Title) ? "Untitled" : post.Title))
                .ToListAsync();

            posts.AddRange(creatorPosts);

            var blockedUserIds = await DbContext.CreatorBlocks
                .AsNoTracking()
                .Where(block => block.CreatorUserId == user.Id)
                .Select(block => block.BlockedUserId)
                .ToHashSetAsync();

            var comments = await DbContext.Comments
                .AsNoTracking()
                .Include(comment => comment.Post)
                .Include(comment => comment.CommenterUser)
                .Where(comment => comment.Post!.CreatorUserId == user.Id)
                .OrderByDescending(comment => comment.CreatedAt)
                .Select(comment => new CommentInboxItem(
                    comment.Id,
                    comment.PostId,
                    string.IsNullOrWhiteSpace(comment.Post!.Title) ? "Untitled" : comment.Post!.Title,
                    comment.CommenterUserId,
                    ResolveDisplayName(comment.CommenterUser),
                    comment.Visibility,
                    comment.ModerationStatus,
                    comment.IsHidden,
                    comment.IsHighlighted,
                    blockedUserIds.Contains(comment.CommenterUserId),
                    comment.CreatedAt,
                    BuildPreview(comment.Body)))
                .ToListAsync();

            allComments.AddRange(comments);
            UpdateFilters();
        }
        catch (Exception ex)
        {
            loadError = $"Unable to load the inbox. {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void StartReport(int commentId)
    {
        reportCommentId = commentId;
        reportReason = string.Empty;
    }

    private void CancelReport()
    {
        reportCommentId = null;
        reportReason = null;
    }

    private async Task SubmitReportAsync()
    {
        if (!reportCommentId.HasValue)
        {
            return;
        }

        actionMessage = null;
        actionMessageStyle = "alert-info";

        try
        {
            var authState = await AuthenticationStateTask;
            var user = await UserManager.GetUserAsync(authState.User);
            if (user is null)
            {
                actionMessage = "Unable to identify the current user. Please sign in again.";
                actionMessageStyle = "alert-danger";
                return;
            }

            var comment = await DbContext.Comments
                .Include(current => current.Post)
                .FirstOrDefaultAsync(current => current.Id == reportCommentId.Value
                                                && current.Post!.CreatorUserId == user.Id);

            if (comment is null)
            {
                actionMessage = "Unable to find that comment. It may have been updated or removed.";
                actionMessageStyle = "alert-warning";
                return;
            }

            var report = new CommentReport
            {
                CommentId = comment.Id,
                ReporterUserId = user.Id,
                Reason = string.IsNullOrWhiteSpace(reportReason) ? null : reportReason.Trim(),
                Status = ReportStatus.Open
            };

            DbContext.CommentReports.Add(report);
            comment.ModerationStatus = CommentModerationStatus.Flagged;
            comment.IsHighlighted = false;
            await DbContext.SaveChangesAsync();

            actionMessage = "Report submitted to admins.";
            actionMessageStyle = "alert-success";
            CancelReport();
            await LoadInboxAsync();
        }
        catch (Exception ex)
        {
            actionMessage = $"Unable to submit the report. {ex.Message}";
            actionMessageStyle = "alert-danger";
        }
    }

    private async Task BlockCommenterAsync(int commentId)
    {
        actionMessage = null;
        actionMessageStyle = "alert-info";

        try
        {
            var authState = await AuthenticationStateTask;
            var user = await UserManager.GetUserAsync(authState.User);
            if (user is null)
            {
                actionMessage = "Unable to identify the current user. Please sign in again.";
                actionMessageStyle = "alert-danger";
                return;
            }

            var comment = await DbContext.Comments
                .Include(current => current.Post)
                .FirstOrDefaultAsync(current => current.Id == commentId && current.Post!.CreatorUserId == user.Id);

            if (comment is null)
            {
                actionMessage = "Unable to find that comment. It may have been updated or removed.";
                actionMessageStyle = "alert-warning";
                return;
            }

            var existingBlock = await DbContext.CreatorBlocks
                .FirstOrDefaultAsync(block => block.CreatorUserId == user.Id
                                              && block.BlockedUserId == comment.CommenterUserId);

            if (existingBlock is null)
            {
                DbContext.CreatorBlocks.Add(new CreatorBlock
                {
                    CreatorUserId = user.Id,
                    BlockedUserId = comment.CommenterUserId
                });
                await DbContext.SaveChangesAsync();
            }

            actionMessage = "User blocked from commenting on your posts.";
            actionMessageStyle = "alert-success";
            await LoadInboxAsync();
        }
        catch (Exception ex)
        {
            actionMessage = $"Unable to block the user. {ex.Message}";
            actionMessageStyle = "alert-danger";
        }
    }

    private void HandlePostFilterChanged(ChangeEventArgs args)
    {
        selectedPostId = int.TryParse(args.Value?.ToString(), out var postId)
            ? postId
            : null;
        UpdateFilters();
    }

    private void SelectStatus(CommentModerationStatus status)
    {
        selectedStatus = status;
        UpdateFilters();
    }

    private void UpdateFilters()
    {
        var baseList = selectedPostId.HasValue
            ? allComments.Where(comment => comment.PostId == selectedPostId.Value)
            : allComments.AsEnumerable();

        var baseListArray = baseList.ToList();
        totalFilteredCount = baseListArray.Count;

        statusCounts.Clear();
        foreach (var status in statusTabs.Select(tab => tab.Status))
        {
            statusCounts[status] = baseListArray.Count(comment => comment.Status == status);
        }

        filteredComments = baseListArray
            .Where(comment => comment.Status == selectedStatus)
            .ToList();
    }

    private async Task ApproveCommentAsync(int commentId)
    {
        await UpdateCommentAsync(commentId, comment =>
        {
            comment.ModerationStatus = CommentModerationStatus.Approved;
            comment.IsHidden = false;
        }, "Comment approved.", "Approve");
    }

    private async Task ToggleHideCommentAsync(int commentId, bool hide)
    {
        var message = hide ? "Comment hidden." : "Comment unhidden.";
        var action = hide ? "Hide" : "Unhide";
        await UpdateCommentAsync(commentId, comment =>
        {
            comment.IsHidden = hide;
            if (hide)
            {
                comment.IsHighlighted = false;
            }
        }, message, action);
    }

    private async Task ToggleHighlightCommentAsync(int commentId, bool highlight)
    {
        var message = highlight ? "Comment highlighted." : "Comment unhighlighted.";
        var action = highlight ? "Highlight" : "Unhighlight";

        await UpdateCommentAsync(commentId, comment =>
        {
            if (comment.ModerationStatus != CommentModerationStatus.Approved)
            {
                return;
            }

            if (comment.Visibility != CommentVisibility.Public || comment.IsHidden)
            {
                comment.IsHighlighted = false;
                return;
            }

            comment.IsHighlighted = highlight;
        }, message, action);
    }

    private async Task UpdateCommentAsync(int commentId, Action<Comment> update, string successMessage, string actionLabel)
    {
        actionMessage = null;
        actionMessageStyle = "alert-info";

        try
        {
            var authState = await AuthenticationStateTask;
            var user = await UserManager.GetUserAsync(authState.User);
            if (user is null)
            {
                actionMessage = "Unable to identify the current user. Please sign in again.";
                actionMessageStyle = "alert-danger";
                return;
            }

            var comment = await DbContext.Comments
                .Include(current => current.Post)
                .FirstOrDefaultAsync(current => current.Id == commentId && current.Post!.CreatorUserId == user.Id);

            if (comment is null)
            {
                actionMessage = "Unable to find that comment. It may have been updated or removed.";
                actionMessageStyle = "alert-warning";
                return;
            }

            update(comment);
            await DbContext.SaveChangesAsync();
            await LogModerationActionAsync("Comment", comment.Id.ToString(), actionLabel, null);

            actionMessage = successMessage;
            actionMessageStyle = "alert-success";
            await LoadInboxAsync();
        }
        catch (Exception ex)
        {
            actionMessage = $"Unable to update the comment. {ex.Message}";
            actionMessageStyle = "alert-danger";
        }
    }

    private async Task LogModerationActionAsync(string entityType, string entityId, string action, string? reason)
    {
        var authState = await AuthenticationStateTask;
        var actor = await UserManager.GetUserAsync(authState.User);
        if (actor is null)
        {
            return;
        }

        DbContext.ModerationLogs.Add(new ModerationLog
        {
            EntityType = entityType,
            EntityId = entityId,
            Action = action,
            Reason = reason,
            ActorUserId = actor.Id
        });
        await DbContext.SaveChangesAsync();
    }

    private static string ResolveDisplayName(ApplicationUser? user)
    {
        if (user is null)
        {
            return "Commenter";
        }

        if (!string.IsNullOrWhiteSpace(user.DisplayName))
        {
            return user.DisplayName;
        }

        return string.IsNullOrWhiteSpace(user.UserName) ? "Commenter" : user.UserName;
    }

    private static string BuildPreview(string body)
    {
        if (string.IsNullOrWhiteSpace(body))
        {
            return string.Empty;
        }

        var normalized = body.Trim();
        return normalized.Length <= 120 ? normalized : $"{normalized[..117]}…";
    }

    private static string GetStatusLabel(CommentInboxItem comment)
        => comment.IsHidden ? "Hidden" : comment.Status.ToString();

    private static string GetStatusBadgeClass(CommentInboxItem comment)
    {
        if (comment.IsHidden)
        {
            return "text-bg-secondary";
        }

        return comment.Status switch
        {
            CommentModerationStatus.Approved => "text-bg-success",
            CommentModerationStatus.Held => "text-bg-warning",
            CommentModerationStatus.Rejected => "text-bg-danger",
            CommentModerationStatus.Flagged => "text-bg-danger",
            _ => "text-bg-secondary"
        };
    }

    private sealed record StatusTab(CommentModerationStatus Status, string Label);

    private sealed record PostOption(int Id, string Title);

    private sealed record CommentInboxItem(
        int Id,
        int PostId,
        string PostTitle,
        string CommenterUserId,
        string CommenterName,
        CommentVisibility Visibility,
        CommentModerationStatus Status,
        bool IsHidden,
        bool IsHighlighted,
        bool IsCommenterBlocked,
        DateTimeOffset CreatedAt,
        string Preview);
}
