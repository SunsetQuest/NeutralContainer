@page "/posts/{PostId}"

@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

<PageTitle>Post</PageTitle>

<div class="container py-4">
    <h1>Post @PostId</h1>
    <p class="text-muted">
        This is a placeholder post view. Only authenticated users can access post pages.
    </p>
</div>

@code {
    [Parameter]
    public string? PostId { get; set; }
}
